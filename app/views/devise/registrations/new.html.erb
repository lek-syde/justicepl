<section class="section">
  <div class="container">



    <div class="column is-6 is-offset-3">
                <!-- START ARTICLE -->
                <div class="card article">

                    <div class="card-content">


                      <h2 class="title"> <b>Sign Up</b></h2>

                          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                            <%= f.error_notification %>




                              <div class="field">

                                <div class="control">

                                  <%= f.input :email,
                                      required: true,
                                      placeholder: "johndoe@todojustice.com",
                                      autofocus: true,
                                      input_html: { class: "input" },
                                      wrapper: false,
                                      label_html: {class: "label"}  %>
                                    </div>
                                  </div>



                                  <div class="field">

                                    <div class="control">
                                      <%= f.input :password,
                                          required: true,
                                          hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                          wrapper: false,
                                          input_html: { class: "input" },
                                          label_html: {class: "label"}  %>



                                    </div>
                                  </div>

                                  <div class="field">

                                    <div class="control">
                                      <%= f.input :password_confirmation,
                                          required: true,
                                            hint: ("Retype password" ),
                                          wrapper: false,
                                          input_html: { class: "input" },
                                          label_html: {class: "label"} %>
                                    </div>
                                  </div>



                                  <div class="field">
                                                      <div class="field-label">
                                                        <!-- Left empty for spacing -->
                                                      </div>
                                                      <div class="field-body">
                                                        <div class="field">
                                                          <div class="control">
                                                              <%= f.button :submit, "Sign up", class: "button is-primary"  %>
                                                          </div>
                                                        </div>
                                                      </div>
                                                      </div>

                          <% end %>

                          <%= render "devise/shared/links" %>



                        </div>
                      </div>
                    </div>
                  </div>
</section>
