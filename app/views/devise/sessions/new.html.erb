<section class="section">
  <div class="container">



    <div class="column is-6 is-offset-3">
                <!-- START ARTICLE -->
                <div class="card article">

                    <div class="card-content">


                        <h2 class="title"> <b>Login</b></h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>




                <div class="field">

                  <div class="control">

                    <%= f.input :email,
                        required: true,
                        placeholder: "johndoe@todojustice.com",
                        autofocus: true,
                        input_html: { class: "input" },
                        wrapper: false,
                        label_html: {class: "label"}  %>
                      </div>
                    </div>







                <div class="field">

                  <div class="control">
                    <%= f.input :password,
                        required: true,
                        wrapper: false,
                        input_html: {autocomplete: "current-password" , class: "input" },
                        label_html: {class: "label"}  %>



                  </div>
                </div>


                <div class="field">

                  <div class="control">

                    <%= f.input :remember_me, wrapper: false,   as: :boolean if devise_mapping.rememberable? %>
                  </div>
                </div>




                    <div class="field">
                        <div class="field-label">
                          <!-- Left empty for spacing -->
                        </div>
                        <div class="field-body">
                          <div class="field">
                            <div class="control">
                                <%= f.button :submit, "Sign in", class: "button is-primary"  %>
                            </div>
                          </div>
                        </div>
                        </div>


<% end %>

<%= render "devise/shared/links" %>
                    </div>
                </div>
  </div>
  </div>
</section>
