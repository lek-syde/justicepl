<%= simple_form_for(@discussion) do |f| %>
<%= f.error_notification %>


  <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label">Ask your Question</label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">

      <%= f.input :title,
          required: true,
          placeholder: "Start your question with 'how,' 'what,' 'why,' 'when,' 'can I...' 'do I...' or 'will I...'",
          autofocus: true,
          input_html: { class: "textarea" },
          wrapper: false,
          label_html: {class: "label"}  %>

    </div>
  </div>
</div>
</div>

<div class="field is-horizontal">
<div class="field-label is-normal">
  <label class="label">Explain your situation</label>
</div>
<div class="field-body">
  <div class="field">
    <div class="control">
      <%= f.input :content,
          required: true,
          placeholder: "Provide key details. No need to get it perfectâ€“you can always make clarifications or ask follow-up questions later.",
          autofocus: true,
          input_html: { class: "textarea" },
          wrapper: false,
          rows:20,
          label_html: {class: "label"}  %>

    </div>
  </div>
</div>
</div>

